FROM python:3.11-slim

# Install system dependencies including make, curl for health checks, and build tools
RUN apt-get update && apt-get install -y \
    make \
    curl \
    gcc \
    && rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /workspace

# Copy requirements files
COPY requirements.txt ./
COPY user-service/requirements.txt ./user-service/
COPY product-service/requirements.txt ./product-service/
COPY order-service/requirements.txt ./order-service/

# Install all Python dependencies
RUN pip install --no-cache-dir -r requirements.txt && \
    pip install --no-cache-dir -r user-service/requirements.txt && \
    pip install --no-cache-dir -r product-service/requirements.txt && \
    pip install --no-cache-dir -r order-service/requirements.txt

# Install additional development tools
RUN pip install --no-cache-dir ipython ipdb

# Default command - keep container running
CMD ["sleep", "infinity"]
